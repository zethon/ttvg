include(TTVGPackage.cmake)

set(PROJECT_NAME "TTVG")
SET(PROJECT_RUNTIME "bin")
SET(PROJECT_EXTENSION "exe")

string(TOLOWER ${PROJECT_NAME} CPACK_PACKAGE_NAME)
set(CPACK_PACKAGE_FILE_NAME "${CPACK_PACKAGE_NAME}-${CPACK_PACKAGE_VERSION}-@APP_BUILD_NUMBER@-${CMAKE_SYSTEM_NAME}-${CMAKE_SYSTEM_PROCESSOR}")
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "TTVG CPACK_PACKAGE_DESCRIPTION_SUMMARY")
set(CPACK_PACKAGE_DESCRIPTION "CPACK_PACKAGE_DESCRIPTION")
string(TOLOWER ${CPACK_PACKAGE_FILE_NAME} CPACK_PACKAGE_FILE_NAME)

set(CPACK_INSTALL_CMAKE_PROJECTS "@CMAKE_BINARY_DIR@;TTVG;TTVG;/")

if (NOT APPLE)
    # setting this on macOS causes the cpack error: 
    #   CPack Error: Error adding SLA.
    #   failed to find CoreServices/CoreServices.r
    # but NSIS requires this to be defined.
    set(CPACK_RESOURCE_FILE_LICENSE "@CMAKE_SOURCE_DIR@/src/CPack/license.txt")
endif()

set(CPACK_BUNDLE_NAME "${PROJECT_NAME}")
# set(CPACK_BUNDLE_PLIST "@CMAKE_BINARY_DIR@/Info.plist")
# set(CPACK_BUNDLE_ICON "@CMAKE_SOURCE_DIR@/src/CPack/TTVG.icns")

set(CPACK_NSIS_PACKAGE_NAME "${PROJECT_NAME}")
set(CPACK_NSIS_DISPLAY_NAME "${PROJECT_NAME}")
set(CPACK_NSIS_INSTALL_ROOT "$ENV{ProgramFiles}\\${PROJECT_NAME}")

SET(CPACK_COMPONENTS_ALL TTVG)
SET(CPACK_COMPONENT_GROUP_TTVG_EXPANDED TRUE)
SET(CPACK_COMPONENT_TTVG_DISPLAY_NAME "TTVG DISPLAY")
SET(CPACK_COMPONENT_TTVG_DESCRIPTION "TTVG Utility")
SET(CPACK_COMPONENT_TTVG_GROUP TTVG)
SET(CPACK_COMPONENT_TTVG_INSTALL_TYPES Full)
	
# Component deps for SDK builds are needed for Windows only
set(CPACK_COMPONENT_TTVG_DEPENDS Runtime)
